---
import Layout from '../layouts/Layout.astro';
import TopNavigation from '../components/TopNavigation.astro';
import Footer from '../components/Footer.astro';

// Placeholder for fetching your project data
const projects = [
	{ 
		title: "E-Commerce Re-Architecture", 
		client: "Global Retailer Inc.", 
		score: "98/100", 
		url: "/work/retailer-ecommerce", 
		tags: ["Astro", "Headless Commerce", "Tailwind", "Performance"],
		imageAlt: "Thumbnail of the Global Retailer e-commerce site.",
	},
	{ 
		title: "Legacy Documentation Migration", 
		client: "Software Corp.", 
		score: "95/100", 
		url: "/work/software-docs", 
		tags: ["Static Generation", "Content Migration", "Security"],
		imageAlt: "Thumbnail of the Software Corp. documentation site.",
	},
	{ 
		title: "High-Traffic Content Portal", 
		client: "Media Group LLC", 
		score: "99/100", 
		url: "/work/media-portal", 
		tags: ["Speed", "SEO", "Astro", "Content Delivery"],
		imageAlt: "Thumbnail of the Media Group content portal.",
	},
	// Add more projects here
];
---

<Layout title="Clevercouch Work: Performance-Engineered Digital Flagships">
	<TopNavigation />

	<main class="py-24 bg-parchment-light">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			
			<header class="text-center mb-16 max-w-4xl mx-auto">
				<h1 class="text-xs font-mono-subhead text-sage-dark uppercase tracking-widest mb-4">
					Our Work
				</h1>
				<p class="text-5xl md:text-6xl font-serif-heavy text-charcoal leading-tight">
					Proof is in the Performance.
				</p>
				<p class="mt-6 text-xl font-sans text-charcoal-dark/80">
					We specialize in eliminating bloat and rebuilding large-scale digital properties on a foundation of pure speed and architectural simplicity.
				</p>
			</header>

			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-10">
				
				{projects.map((project) => (
					<a href={project.url} class="block group">
						<div class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-2xl transition duration-300 transform hover:-translate-y-1 border border-charcoal/10">
							
							<div class="h-48 bg-parchment-dark/70 flex items-center justify-center border-b border-sand-accent/50">
								<span class="text-xl font-mono-subhead text-charcoal-light">Project Thumbnail</span>
							</div>
							
							<div class="p-6">
								<h3 class="text-2xl font-serif-heavy text-charcoal mb-2 group-hover:text-sand-accent transition duration-300">
									{project.title}
								</h3>
								
								<p class="text-sm font-sans text-charcoal-light mb-4">Client: {project.client}</p>

								<div class="flex justify-between items-center mb-4">
									<p class="text-lg font-mono-subhead text-sage-dark">
										Core Score: {project.score}
									</p>
								</div>
								
								<div class="flex flex-wrap gap-2">
									{project.tags.map((tag) => (
										<span class="text-xs font-mono-subhead px-3 py-1 bg-charcoal/5 text-charcoal rounded-full">
											{tag}
										</span>
									))}
								</div>
							</div>
						</div>
					</a>
				))}
			</div>

			<div class="text-center mt-24 pt-12 border-t border-sand-accent/50">
				<p class="text-xl font-serif-heavy text-charcoal mb-6">
					Ready to achieve scores like these?
				</p>
				<a 
					href="/#contact" 
					class="inline-block px-10 py-4 text-base font-mono-subhead text-parchment-light bg-charcoal rounded-lg hover:bg-sand-accent hover:text-charcoal transition duration-300 uppercase tracking-widest shadow-xl"
				>
					Start Your Performance Audit
				</a>
			</div>

		</div>
	</main>

	<Footer />
</Layout>